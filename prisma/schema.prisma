// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  passwordHash String
  dashboards   Dashboard[]
}

model Dashboard {
  id       String    @id @default(cuid())
  name     String
  position Int //position ci servir√† per definire l'ordine
  contents Content[]
  user     User      @relation(fields: [userId], references: [id])
  userId   String

  @@unique([id, userId])
}

model Content {
  id          String    @id @default(cuid())
  text        String
  position    Int
  dashboard   Dashboard @relation(fields: [dashboardId], references: [id])
  dashboardId String

  @@unique([id, dashboardId])
}

model JwtKey {
  id         Int    @id @default(autoincrement())
  privateKey String
  publicKey  String
}
