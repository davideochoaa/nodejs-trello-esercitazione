// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  passwordHash String
  dashboards   Dashboard[]
  comments     Comment[]
}

model Dashboard {
  id       String    @id @default(cuid())
  name     String
  position Int //position ci servir√† per definire l'ordine
  contents Content[]
  comments Comment[]
  user     User      @relation(fields: [userId], references: [id])
  userId   String

  @@unique([id, userId])
}

model Content {
  id          String    @id @default(cuid())
  text        String
  title       String
  img         String    @default("")
  position    Int
  dashboard   Dashboard @relation(fields: [dashboardId], references: [id])
  dashboardId String
  like        Int       @default(0)
  comments    Comment[]

  @@unique([id, dashboardId])
}

model JwtKey {
  id         Int    @id @default(autoincrement())
  privateKey String
  publicKey  String
}

model Comment {
  id          String    @id @default(cuid())
  text        String
  position    Int
  like        Int
  dashboard   Dashboard @relation(fields: [dashboardId], references: [id])
  content     Content   @relation(fields: [contentsId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  contentsId  String
  dashboardId String

  @@unique([id, contentsId])
}
